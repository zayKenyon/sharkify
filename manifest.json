{
	"manifest_version": 3,
	"name": "Sharkify",
	"version": "1.0.1",
	"description": "Randomly replaces images on webpages with shark images.",
	"permissions": [
		"storage",
		"activeTab",
		"unlimitedStorage"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "sharkify@bigshark.party",
			"data_collection_permissions": {
				"required": [
					"none"
				]
			}
		}
	},
	"icons": {
		"48": "src/icons/shark-48.png"
	},
	"action": {
		"default_title": "Sharkify!",
		"default_popup": "src/popup/popup.html",
		"default_icon": {
			"32": "src/icons/shark-32.png"
		},
		"theme_icons": [
			{
				"light": "src/icons/shark-32-light.png",
				"dark": "src/icons/shark-32.png",
				"size": 32
			}
		]
	},
	"options_ui": {
		"page": "src/upload/upload.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/content_scripts/sharkify.js"
			]
		}
	]
}
