{
	"name": "sharkify",
	"version": "1.0.0",
	"description": "",
	"main": "manifest.json",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "dotenv -e .env -- bash -c 'web-ext run --keep-profile-changes --firefox=\"$FIREFOX_BINARY\"'",
		"build": "web-ext build --overwrite-dest",
		"sign": "dotenv -e .env -- bash -c 'web-ext sign --api-key=\"$WEB_EXT_API_KEY\" --api-secret=\"$WEB_EXT_API_SECRET\" --channel=\"$WEB_EXT_CHANNEL\"'",
		"lint": "web-ext lint",
		"format": "npx @biomejs/biome format --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"dotenv-cli": "^11.0.0",
		"web-ext": "^9.2.0"
	}
}
